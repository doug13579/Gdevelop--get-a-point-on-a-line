        {
          "description": "Get Points",
          "fullName": "Get Points",
          "functionType": "Action",
          "name": "GetPoint",
          "sentence": "Get Points using Object _PARAM1_ _PARAM2_ _PARAM3_ store in Variable _PARAM4_ ",
          "events": [
            {
              "type": "BuiltinCommonInstructions::JsCode",
              "inlineCode": [
                "//get the variables using the arguement \"Target\" for name",
                "const targetX = runtimeScene.getVariables().get(eventsFunctionContext.getArgument(\"Target\")).getChild(\"X\");",
                "const targetY = runtimeScene.getVariables().get(eventsFunctionContext.getArgument(\"Target\")).getChild(\"Y\");",
                "const targetDistance = runtimeScene.getVariables().get(eventsFunctionContext.getArgument(\"Target\")).getChild(\"Distance\");",
                "",
                "// The 3 objects are setup in the Function's Group tab named Group and ",
                "// The groop is chosen by clicking the first line of this javascript event",
                "const ObjA = objects[0];",
                "const ObjB = objects[1];",
                "const ObjC = objects[2];",
                "",
                "const  vAPx = ObjC.getX() - ObjA.getX();",
                "const  vAPy = ObjC.getY() - ObjA.getY();",
                "const  vABx = ObjB.getX() - ObjA.getX();",
                "const  vABy = ObjB.getY() - ObjA.getY();",
                "const  sqDistanceAB = ObjA.getDistanceToObject(ObjB)**2;",
                "const  ABAPproduct = vABx*vAPx + vABy*vAPy;",
                "let   amount = ABAPproduct / sqDistanceAB;",
                "",
                "// clamping amount between 0 and 1 restricts it to point on line.",
                "// without clamping the line calculation would continue beyond the start and end points",
                "if (amount > 1) amount = 1;",
                "if (amount < 0) amount = 0;",
                "",
                "//Which gives you 'amount', how far through the line segment you are between A and B (properly bounded).",
                "const  nx = (amount * (ObjB.getX() - ObjA.getX())) + ObjA.getX();",
                "const  ny = (amount * (ObjB.getY() - ObjA.getY())) + ObjA.getY();",
                "",
                "// set the x, y and distance for the variable defined by the arguement \"Target\"",
                "targetX.setNumber(nx);",
                "targetY.setNumber(ny);",
                "targetDistance.setNumber(ObjC.getDistanceToPosition(nx,ny));",
                ""
              ],
              "parameterObjects": "Group",
              "useStrict": true,
              "eventsSheetExpanded": true
            }
          ],
